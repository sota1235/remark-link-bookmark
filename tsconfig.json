{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "esnext",
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
